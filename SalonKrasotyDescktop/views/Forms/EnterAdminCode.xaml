<Window x:Class="SalonKrasotyDescktop.views.Forms.EnterAdminCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SalonKrasotyDescktop.views.Forms"
        mc:Ignorable="d"
        Title="EnterAdminCode" Height="300" Width="200">
    <Grid Background="Coral">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Введите код администратора:"></Label>
            <TextBox Name="TbAdminCode"></TextBox>
            <Button Content="Подтвердить" Click="ButtonBase_OnClick" Margin="0,10,0,0"></Button>
        </StackPanel>
    </Grid>
</Window>
